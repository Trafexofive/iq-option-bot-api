# Environment Variables for IQ Option Trading Bot

# ============================================
# IQ OPTION API CREDENTIALS
# ============================================
# IMPORTANT: Use your actual IQ Option credentials here
# For safety, always start with demo_mode: true in settings.yml
IQ_OPTION_EMAIL=your_actual_email@example.com
IQ_OPTION_PASSWORD=your_actual_password
IQ_OPTION_BROKER_ID=  # Optional: leave empty unless required

# ============================================
# LLM CONFIGURATION
# ============================================
LLM_PROVIDER=openai  # openai, anthropic, ollama, gemini
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key
OLLAMA_BASE_URL=http://ollama:11434
GEMINI_API_KEY=your_gemini_api_key

# ============================================
# DATABASE CONFIGURATION
# ============================================
DATABASE_URL=postgresql://user:password@localhost/trading_bot
TEST_DATABASE_URL=postgresql://user:password@localhost/trading_bot_test

# ============================================
# REDIS CONFIGURATION
# ============================================
REDIS_URL=redis://localhost:6379

# ============================================
# APPLICATION SETTINGS
# ============================================
LOG_LEVEL=INFO
DEBUG=false

# ============================================
# TRADING SAFETY SETTINGS
# ============================================
# These are additional safety limits (also configured in settings.yml)
MAX_TRADE_AMOUNT=100.0  # Maximum trade amount in USD
MAX_DAILY_TRADES=10     # Maximum trades per day
ENABLE_REAL_TRADING=false  # Set to true only when ready for live trading